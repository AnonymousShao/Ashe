<%- include('../../../components/header.ejs') %>
  <div class="volcano-about-news-detail">
    <article >
      <!-- banner -->
      <section class="content-banner">
        <div class="wraper">
          <div class="volcano-common-content">
            <img src="/static/assets/notice-views/detail/bannerpic@v2.0.png">
            <div class="word">
              <div class="word-title"><%= banner_title %></div>
              <div class="word-brief"><%= banner_brief %></div>
              <div class="word-describe"><%= banner_describe %></div>
            </div>
            <ul class="breadcrumb">
              <li class="first"><a class="firstpage" href="/"><%= breadcrumb_one %></a>&nbsp;/&nbsp;</li>
              <li class="second"><a class="success" href="/about/milestones"><%= breadcrumb_two %></a>&nbsp;/</li>
              <li class="third">&nbsp;<%= breadcrumb_three %></li>
            </ul>
          </div>
        </div>
      </section>
      <!-- main content -->
      <section class="content-main">
        <div class="inner">
          <div class="left-content">
            <div class="news">
              <div class="item">
                <div class="title"><%= notice.title %></div>
                <p class="brief">
                  <span class="author"><%= notice.authorName %></span>
                  <%if(notice.createdAt){%>
                  &nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
                  <span class="date"><%= new Date(notice.createdAt).getFullYear() + '. ' + (new Date(notice.createdAt).getMonth() + 1) + '. ' + new Date(notice.createdAt).getDate() %></span>
                  <%}%>
                </p>

                <div class="detail wangEditor-container" style="border: none">
                  <div class="wangEditor-txt" style="padding: 0" content="<%= notice.content %>"></div>
                </div>
              </div>
              <div class="share">
                <i class="icon-wechat"></i>
                <i class="icon-weibo"></i>
                <i class="icon-facebook"></i>
                <i class="icon-twitter"></i>
              </div>
              <div class="page-link">
                
              </div>
            </div>
            <div class="scroll"></div>
          </div>
          <div class="right-content">
            <div class="down hidden">
              <i class="icon-arrow-down"></i>
            </div>
            <div class="search">
              <div class="input"><input placeholder="<%= search %>" /></div>
              <div class="icon_srch"><i class="icon-search"></i></div>
            </div>
            <div class="tags">
            </div>
            <div class="head-line">
              <div class="title head-title"><%= head_line %></div>
              <div class="head-content">
              </div>
            </div>
          </div>
        </div>
      </section>
    </article>
  </div>
<%- include('../../../components/footer.ejs') %>
